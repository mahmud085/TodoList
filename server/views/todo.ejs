<!doctype html>
<html>
	<head>
		<% include head %>
		<style>
			.contnt {

			}
			.logo{
        		color: #f4511e;
      			font-size: 15px;
        	}
			li a {

			    display: block;
			    color: #000;
			    padding: 8px 0 8px 16px;
			    text-decoration: none;
			}

			li a:hover {
			    background-color: #555;
			    color: white;
			}
			.sidemenu{
				border-right: 1px solid gray;
				width: 20%;
				list-style-type: none;
			    height: 100%;
			    margin: 0;
			    padding: 0;
			    position: fixed; 
			}
			.addTask{
				padding-top: 10px;
			}
		</style>
	</head>
	<body class='container'>
		<header>
			<% include navigation %>
		</header>
		<main>
			<div class='row'>
				<div class="col-md-4">
					<ul class='sidemenu'>
						<li><a class='active' href="#">
						<span class="glyphicon glyphicon-envelope logo"></span>  Inbox</a></li>
						<li><a href="#"><span class="glyphicon glyphicon-tasks logo"></span>  Today</a></li>
					</ul>
				</div>
				<div class="col-md-8 contnt">
					<h2>Inbox</h2>
					<div class="collapse" id="collapseExample">
					    <form role='form' class='form-inline' method='post'>
					    <div class='form-group'>
							<input type='text' class="form-control" name="description" placeholder="Description">
						</div>
						<div class='form-group'>
							<input type='text' class="form-control" name="date" placeholder="Date">
						</div>
						<button type='submit' class="btn btn-danger btn-md">Save</button>
						<a data-toggle="collapse" href="#collapseExample" class="btn btn-warning btn-md">Cancel</a>
					    </form>

					</div>
					<!--<span class="glyphicon glyphicon-plus logo addTask"><a data-toggle="collapse" href="#collapseExample">Add Task</a></span>-->
					<div class="addTask">
					<a data-toggle="collapse" href="#collapseExample"><span class="glyphicon glyphicon-plus logo"></span> Add Tasks</a>
					</div>
				</div>
			</div>
		</main>
	</body>
</html>